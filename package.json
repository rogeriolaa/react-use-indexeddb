{
  "name": "@n0n3br/react-use-indexeddb",
  "version": "1.0.1",
  "description": "A React hook for easy IndexedDB integration",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
